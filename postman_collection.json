{
  "info": {
    "name": "Inventory API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop\",\n  \"category\": \"electronics\",\n  \"price\": 1200,\n  \"stock\": 5\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/products",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["products"]
        }
      }
    },
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:5000/products",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["products"]
        }
      }
    },
    {
      "name": "Update Product Stock",
      "request": {
        "method": "PUT",
        "body": {
          "mode": "raw",
          "raw": "{ \"stock\": 15 }"
        },
        "url": {
          "raw": "http://127.0.0.1:5000/products/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["products", "1"]
        }
      }
    }
  ]
}
